        <!-- 广义查询-->
    <select id="select" resultType="java.util.ArrayList" parameterType="java.util.HashMap">
        select * from tb_user
        <where>
          <if test="obj.id">
            id = #{obj.id}
          </if>
          <if test="obj.username">
            and username=#{obj.username}
          </if>
          <if test="obj.password">
              and password = #{obj.password}
          </if>
          <if test="obj.phoneNumber">
              and phone_number = #{obj.phoneNumber}
          </if>
        </where>
    </select>
